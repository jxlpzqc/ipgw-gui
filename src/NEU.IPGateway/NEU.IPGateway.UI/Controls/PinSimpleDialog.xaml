<Window x:Class="NEU.IPGateway.UI.Controls.PinSimpleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NEU.IPGateway.UI.Controls" 
        xmlns:fa="http://schemas.fontawesome.io/icons/"        
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="{DynamicResource enterpin}" Height="206" Width="484">
    <StackPanel Margin="25">
        <StackPanel Orientation="Horizontal">
            
            <TextBlock TextWrapping="Wrap" x:Name="messageText">为了您的安全，请输入PIN值</TextBlock>
        </StackPanel>
        <local:PinInput x:Name="pinInput" FinishedInput="PinInput_FinishedInput"></local:PinInput>
    </StackPanel>
</Window>
